= form_tag(session_path, class: "uk-panel uk-panel-box uk-form") do |f|
  .uk-form-row
    = email_field_tag :email, params[:email], autofocus: true, class: "uk-width-1-1 uk-form-large", placeholder: "请输入邮箱"
  .uk-form-row
    = password_field_tag :password,params[:password], autocomplete: "off", class: "uk-width-1-1 uk-form-large", placeholder: "请输入密码"
  .uk-form-row
    = text_field_tag :captcha, "", class: "uk-width-1-2 uk-form-large uk-float-left"
    = show_simple_captcha

  .uk-form-row
    = submit_tag "登录", class: "uk-width-1-1 uk-button uk-button-primary uk-button-large"
